{% extends 'KanCmsBundle::layout.html.twig' %}
{% block body %}
    <caption>Page list(<a href="{{ path('kan_cms_create') }}">Create</a>):</caption>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
        <tr>
            <th>id</th>
            <th>title</th>
            <th>description</th>
            <th>created</th>
            <th>edited</th>
            <th><b>actions</b></th>
        </tr>
        </thead>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <td>{{ page.description }}</td>
                <td>{{ page.created }}</td>
                <td>{{ page.edited }}</td>
                <td>
                    <a href="{{ path('kan_cms_show', {'id': page.id}) }}">
                        View
                    </a>
                    |
                    <a href="{{ path('kan_cms_update', {'id': page.id}) }}">
                        Edit
                    </a>
                    |
                    <a href="{{ path('kan_cms_delete', {'id': page.id}) }}">
                        Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
